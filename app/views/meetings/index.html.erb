<div class='my-5'>
  <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4 bg-light border border-1 rounded-3" style="width:750px">

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active fs-5" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Calendar</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link fs-5" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">All Meetings</button>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= month_calendar events: @meetings do |date, meetings| %>
          <%= date %>
          <% meetings.each do |meeting| %>
            <div class="border border-1 rounded-2 mb-1 overflow-hidden" style="background-color: #deebf1; height:20px; padding-bottom:25px">
              <%= link_to meeting.title, meeting, class: "link", style: "font-size:14px; text-decoration: none; color:#243dbd" %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="tab-pane fade overflow-auto" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" style="height:537px">
        <p>Today : </p>
        <% @todays_meeting.each do |meeting| %>
          <div class="bg-white border border-1 rounded-3 my-2 p-2">
            <li class="nav-item" style="list-style:none">
              <%= link_to meeting.title, meeting_path(meeting),style: "text-decoration: none; color:black"%><br>
              <p style='margin-bottom:0; font-size:12px'><%= meeting.start_time.strftime( '%d/%m/%Y') %> (<%= meeting.start_time.strftime("%I:%M%p") %>) -----> <%= meeting.end_time.strftime( '%d/%m/%Y') %> (<%= meeting.end_time.strftime("%I:%M%p") %>)</p>
            </li>
          </div>
        <% end %>
        <p>Upcoming : </p>
        <% @upcoming_meeting.each do |meeting| %>
          <div class="bg-white border border-1 rounded-3 my-2 p-2">
            <li class="nav-item" style="list-style:none">
              <%= link_to meeting.title, meeting_path(meeting),style: "text-decoration: none; color:black"%><br>
              <p style='margin-bottom:0; font-size:12px'><%= meeting.start_time.strftime('%d/%m/%Y') %> (<%= meeting.start_time.strftime("%I:%M%p") %>) -----> <%= meeting.end_time.strftime('%d/%m/%Y') %> (<%= meeting.end_time.strftime("%I:%M%p") %>)</p>
            </li>
          </div>
        <% end %>
        <p>Completed : </p>
        <% @completed_meeting.each do |meeting| %>
          <div class="bg-white border border-1 rounded-3 my-2 p-2">
            <li class="nav-item" style="list-style:none">
              <%= link_to meeting.title, meeting_path(meeting),style: "text-decoration: none; color:black"%><br>
              <p style='margin-bottom:0; font-size:12px'><%= meeting.start_time.strftime('%d/%m/%Y') %> (<%= meeting.start_time.strftime("%I:%M%p") %>) -----> <%= meeting.end_time.strftime('%d/%m/%Y') %> (<%= meeting.end_time.strftime("%I:%M%p") %>)</p>
            </li>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
