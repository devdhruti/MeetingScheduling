<html lang="en">
  <head>
    <script src="https://js.stripe.com/v3/"></script>
    <!-- <%= stylesheet_link_tag 'checkout.css' %> -->
    <%= javascript_pack_tag 'checkout', 'data-turbolinks-track': 'reload'%>
  </head>
  <body>
    <div class="d-flex mt-2">
      <div>
        <%= image_tag "card.png", class: "img-fluid mt-2", style: "width:25px" %>
      </div>
      <div class="card mt-2 ms-1 border-dark" style="width: 30rem;">
        <div class="card-body">
          <div class="mb-6 relative">
            <label for="card-element" class="label">
              Enter credit or debit card. All meetings cost â‚¹300 INR.
            </label>

            <div id="card-element" class="input my-1">
              <!-- a Stripe Element will be inserted here. -->
            </div>
            <!-- used to display Element errors -->
            <div id="card-errors" role="alert"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

